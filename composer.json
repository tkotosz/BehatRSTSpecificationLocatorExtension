{
    "name": "bex/behat-rst-specification-locator-extension",
    "type": "behat-extension",
    "description": "This is an extension for Behat which allows loading specifications from reStructuredText documentation",
    "keywords": ["tdd","bdd","behat", "rst", "specification"],
    "homepage": "https://github.com/tkotosz/BehatRSTSpecificationLocatorExtension",
    "license": "MIT",
    "authors": [
        {
            "name": "Tibor Kotosz",
            "email": "kotosy@gmail.com",
            "homepage": "https://github.com/tkotosz",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.1",
        "behat/behat": "^3.5.0"
    },
    "require-dev": {
        "bex/behat-test-runner": "^1.3",
        "phpspec/phpspec": "^2.5",
        "phpunit/phpunit": "^8.5"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "Bex\\Behat\\BehatRSTSpecificationLocatorExtension\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bex\\Behat\\BehatRSTSpecificationLocatorExtension\\Acceptance\\": "features/bootstrap"
        }
    }
}
